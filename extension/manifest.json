{
  "manifest_version": 2,
  "name": "PippiTrack",
  "description": "Allows you to send new top plays to Discord near instantly.",
  "version": "0.9.0",
  "browser_action": {
    "default_icon": "./public/icon-512.png",
    "default_popup": "./dist/popup/index.html"
  },
  "options_ui": {
    "page": "./dist/options/index.html",
    "open_in_tab": true,
    "chrome_style": false
  },
  "background": {
    "scripts": ["./dist/background/index.global.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "http://osu.ppy.sh/users/*",
      "https://osu.ppy.sh/users/*"
    ],
    "js": [
      "./dist/content/index.global.js"
    ]
  }],
  "icons": {
    "16": "./public/icon-512.png",
    "48": "./public/icon-512.png",
    "128": "./public/icon-512.png"
  },
  "permissions": [
    "tabs",
    "identity",
    "storage",
    "activeTab",
    "http://osu.ppy.sh/*",
    "https://osu.ppy.sh/*"
  ],
  "content_security_policy": "script-src 'self' http://localhost:3303; object-src 'self'"
}